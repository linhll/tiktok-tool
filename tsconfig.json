{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*"]
}
